@model IEnumerable<ForSpecial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-dark btn-rounded btn-fw" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Go Back</a>
<br />
<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cards</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Icon URL</th>
                            <th>Card Title</th>
                            <th>Card Description</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.IconURL
                                </td>
                                <td>
                                    @item.CardTitle
                                </td>
                                <td>
                                    @item.CardDescription
                                </td>
                                <td>
                                    <a class="btn btn-success btn-icon-text" asp-area="Admin" asp-controller="SpecialOffer" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

